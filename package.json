{
  "name": "fusion-tic-tac-toe",
  "version": "1.0.0",
  "description": "Real-time multiplayer Tic-Tac-Toe game with distributed WebSocket servers",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=packages/client && npm run build --workspace=packages/mock-server && npm run build --workspace=packages/server",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspace=packages/server",
    "test:integration": "npm run test:integration --workspace=packages/server",
    "test:all": "npm run test:all --workspace=packages/server",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:mock-server": "npm run dev --workspace=packages/mock-server",
    "run:client": "npm run run --workspace=packages/client",
    "run:client:server1": "npm run run:server1 --workspace=packages/client",
    "run:client:server2": "npm run run:server2 --workspace=packages/client",
    "run:client:docker": "npm run run:docker --workspace=packages/client"
  },
  "keywords": [
    "tic-tac-toe",
    "websocket",
    "real-time",
    "multiplayer",
    "nestjs",
    "redis"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
